$(".selected-answer").removeClass("panel-success selected-answer").addClass("panel-default")
<% if @answer.selected %>
  $(".answer[data-id='<%= @answer.id %>'] .panel").addClass("selected-answer panel-success")
<% else %>
  $(".answer[data-id='<%= @answer.id %>'] .panel").removeClass("selected-answer panel-success")
<% end %>